<style>
  /* Fixed outer wrapper to prevent any resizing */
  .swiper-wrapper-fixed {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
  }

  /* Container with fixed positioning */
  .swiper-container {
    width: 100%;
    position: relative;
    overflow: visible;
    padding: 0;
  }

  /* Swiper core element */
  .swiper {
    position: relative;
    width: 100%;
    overflow: visible !important;
  }

  /* Swiper wrapper for slides */
  .swiper-wrapper {
    width: 100%;
    align-items: center;
    margin-top: 1rem;
  }
  
  .swiper-slide {
    width: 50vw; /* 50% of viewport width on mobile */
    height: auto;
    max-width: none;
  }
  
  @media (min-width: 768px) {
    .swiper-slide {
      width: 400px; /* Fixed width on larger screens */
    }
  }
  
  .swiper-button-prev,
  .swiper-button-next {
    color: white;
    background-color: rgba(31, 41, 55, 0.7);
    border-radius: 9999px;
    width: 30px;
    height: 30px;
    z-index: 20;
  }
  
  @media (min-width: 768px) {
    .swiper-button-prev,
    .swiper-button-next {
      width: 40px;
      height: 40px;
    }
  }
  
  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background-color: rgba(31, 41, 55, 0.9);
  }

  .swiper-button-prev:after,
  .swiper-button-next:after {
    font-size: 14px;
    font-weight: bold;
  }
  
  @media (min-width: 768px) {
    .swiper-button-prev:after,
    .swiper-button-next:after {
      font-size: 18px;
    }
  }
  
  /* Custom arrow button positions */
  .custom-prev-button {
    left: 0;
  }
  
  .custom-next-button {
    right: 0;
  }
  
  @media (min-width: 768px) {
    /* Desktop button position adjustments */
    .custom-prev-button {
      left: 2%;
    }
    
    .custom-next-button {
      right: 2%;
    }
  }
  
  @media (min-width: 1200px) {
    .custom-prev-button {
      left: 5%;
    }
    
    .custom-next-button {
      right: 5%;
    }
  }

  /* Image container styles */
  .swiper-slide .aspect-video {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    overflow: hidden;
  }
  
  .swiper-slide .aspect-video img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>

<script>
  import { register } from 'swiper/element/bundle';
  import Swiper from 'swiper';
  import { Navigation, Autoplay } from 'swiper/modules';
  import EffectCarousel from '../Swiper/effectcarousel.js';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import '../Swiper/swiper.css';

  // Register Swiper custom element
  register();
  
  // Initialization function
  function initSwiper() {
    try {
      // Ensure previous swiper instances are destroyed
      const swiperContainer = document.querySelector('.swiper');
      if (!swiperContainer) return;
      
      // Create new swiper instance
      // @ts-ignore - Custom effect module may cause TypeScript error, but works fine in practice
      const swiper = new Swiper('.swiper', {
        modules: [Navigation, Autoplay, EffectCarousel],
        effect: 'carousel',
        // @ts-ignore - Custom effect parameters
        carouselEffect: {
          opacityStep: 0.4,
          scaleStep: 0,
          sideSlides: 1,
          rotate: false,
        },
        grabCursor: true,
        slidesPerView: 'auto',
        centeredSlides: true,
        initialSlide: 0,
        spaceBetween: 10,
        speed: 500,
        loop: true,
        navigation: {
          nextEl: '.custom-next-button',
          prevEl: '.custom-prev-button',
        },
        autoplay: {
          delay: 4000,
          disableOnInteraction: false,
        },
        breakpoints: {
          // when window width is >= 768px
          768: {
            // @ts-ignore - Custom effect parameters
            carouselEffect: {
              opacityStep: 0.4,
              scaleStep: 0,
              sideSlides: 2,
              rotate: false,
            },
          }
        }
      });
      
      // Additional fix to prevent resize issues
      window.addEventListener('resize', () => {
        // Force update after resize to maintain proper dimensions
        setTimeout(() => {
          swiper.update();
        }, 100);
      });
      
      // Monitor navigation button clicks
      const prevBtn = document.querySelector('.custom-prev-button');
      const nextBtn = document.querySelector('.custom-next-button');
      
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          swiper.slidePrev();
        });
      }
      
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          swiper.slideNext();
        });
      }
      
      // Ensure slides display correctly
      swiper.update();
    } catch (error) {
      console.error("Swiper initialization error:", error);
    }
  }

  // Initialize on first page load and after each navigation
  document.addEventListener('DOMContentLoaded', initSwiper);
  document.addEventListener('astro:page-load', initSwiper);
</script>
<style>
  .swiper-slide {
    width: 60%;
    max-width: 600px;
  }
  
  .swiper-button-prev,
  .swiper-button-next {
    color: white;
    background-color: rgba(31, 41, 55, 0.7);
    border-radius: 9999px;
    width: 40px;
    height: 40px;
    z-index: 20;
  }
  
  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background-color: rgba(31, 41, 55, 0.9);
  }

  .swiper-button-prev:after,
  .swiper-button-next:after {
    font-size: 18px;
    font-weight: bold;
  }
  
  /* Custom arrow button positions */
  .custom-prev-button {
    left: 1%;
  }
  
  .custom-next-button {
    right: 1%;
  }
  
  @media (min-width: 768px) {
    .swiper-button-prev,
    .swiper-button-next {
      width: 48px;
      height: 48px;
    }
    
    .swiper-button-prev:after,
    .swiper-button-next:after {
      font-size: 20px;
    }
    
    /* Desktop button position adjustments */
    .custom-prev-button {
      left: 2%;
    }
    
    .custom-next-button {
      right: 2%;
    }
  }
  
  @media (min-width: 1200px) {
    .custom-prev-button {
      left: 5%;
    }
    
    .custom-next-button {
      right: 5%;
    }
  }
  
  /* Ensure carousel container has enough space to display buttons on both sides */
  .swiper-container {
    overflow: visible;
    position: relative;
    padding: 0 20px;
  }
  
  /* Ensure the main slide in the center stands out */
  .swiper {
    overflow: visible !important;
  }
</style>

<script>
  import { register } from 'swiper/element/bundle';
  import Swiper from 'swiper';
  import { Navigation, Autoplay } from 'swiper/modules';
  import EffectCarousel from '../Swiper/effectcarousel.js';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import '../Swiper/swiper.css';

  // Register Swiper custom element
  register();
  
  // Initialization function
  function initSwiper() {
    try {
      // Ensure previous swiper instances are destroyed
      const swiperContainer = document.querySelector('.swiper');
      if (!swiperContainer) return;
      
      // Create new swiper instance
      // @ts-ignore - Custom effect module may cause TypeScript error, but works fine in practice
      const swiper = new Swiper('.swiper', {
        modules: [Navigation, Autoplay, EffectCarousel],
        effect: 'carousel',
        // @ts-ignore - Custom effect parameters
        carouselEffect: {
          opacityStep: 0.4,
          scaleStep: 0.2,
          sideSlides: 2,
          rotate: false,
        },
        grabCursor: true,
        slidesPerView: 'auto',
        centeredSlides: true,
        initialSlide: 0,
        spaceBetween: 10,
        speed: 500,
        loop: true,
        navigation: {
          nextEl: '.custom-next-button',
          prevEl: '.custom-prev-button',
        },
        autoplay: {
          delay: 4000,
          disableOnInteraction: false,
        },
      });
      
      // Monitor navigation button clicks
      const prevBtn = document.querySelector('.custom-prev-button');
      const nextBtn = document.querySelector('.custom-next-button');
      
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          swiper.slidePrev();
        });
      }
      
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          swiper.slideNext();
        });
      }
      
      // Ensure slides display correctly
      swiper.update();
    } catch (error) {
      console.error("Swiper initialization error:", error);
    }
  }

  // Initialize on first page load and after each navigation
  document.addEventListener('DOMContentLoaded', initSwiper);
  document.addEventListener('astro:page-load', initSwiper);
</script>
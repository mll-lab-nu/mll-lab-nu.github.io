---

<div class="blob"></div>

<script>
  // Initialization function to ensure blob animation runs properly
  function initBlobAnimation() {
    const blob = document.querySelector('.blob') as HTMLElement;
    if (blob) {
      // Force a repaint to ensure CSS animations start
      blob.style.animation = 'none';
      void blob.offsetWidth; // Trigger reflow
      blob.style.animation = ''; // Restore the animation
    }
  }

  // Execute initialization on initial page load and after each page transition
  document.addEventListener('DOMContentLoaded', initBlobAnimation);
  document.addEventListener('astro:page-load', initBlobAnimation);
</script>


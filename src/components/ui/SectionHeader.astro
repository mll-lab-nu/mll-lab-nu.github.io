---
interface Props {
    title: string;
    subtitle?: string;
    centered?: boolean;
    className?: string;
}

const { 
    title, 
    subtitle, 
    centered = false,
    className = ''
} = Astro.props;

const alignment = centered ? 'text-center' : '';
---

<div class={`mb-8 ${alignment} ${className}`}>
    <h2 class="text-3xl font-heading font-bold text-secondary-900 mb-3">{title}</h2>
    {subtitle && <p class="text-xl text-secondary-600 max-w-3xl mx-auto">{subtitle}</p>}
</div> 
---
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';
import Button from '../components/ui/Button.astro';

const menuitems = [
	{
		title: 'Projects',
		path: '/projects',
	},
    {
		title: 'Publications',
		path: '/publications',
	},
	{
		title: 'Team',
		path: '/team',
	},
    {
		title: 'Join Us',
		path: '/joinus',
	},
];

// Get current path to determine active page
const currentPath = Astro.url.pathname;
---

<header class="py-3 shadow-soft bg-white sticky top-0 z-50">
	<div class="container mx-auto px-4">
		<!-- Desktop navigation -->
		<div class="hidden lg:flex items-center justify-between w-full">
			<!-- Left side: Lab name -->
			<div>
				<a
					aria-label="Home"
					href="/"
					class="flex py-1 text-lg font-heading font-semibold hover:text-primary-600 transition-colors"
				>
					<span class="font-bold text-primary-600">MLL</span>&nbsp;Lab&nbsp;-&nbsp;<span class="font-bold text-primary-600">M</span>achine&nbsp;<span class="font-bold text-primary-600">L</span>earning&nbsp;&&nbsp;<span class="font-bold text-primary-600">L</span>anguage 
				</a>
			</div>
			
			<!-- Right side: Navigation and buttons -->
			<div class="flex items-center">
				<nav>
					<ul class="flex space-x-8">
						{
							menuitems.map((item) => {
								const isActive = currentPath === item.path || 
									(item.path !== '/' && currentPath.startsWith(item.path));
								return (
									<li>
										<a
											aria-label={item.title}
											href={item.path}
											class={`text-base font-bold transition-colors ${isActive 
												? "text-primary-600" 
												: "text-secondary-600 hover:text-primary-600"}`}
										>
											{item.title}
										</a>
									</li>
								);
							})
						}
					</ul>
				</nav>
				
				<div class="flex items-center ml-8">
					<a href="https://github.com/RAGEN-AI/RAGEN" class="text-secondary-600 hover:text-secondary-800 transition-colors mr-4" aria-label="GitHub" target="_blank" rel="noopener">
						<svg width="22" height="22" viewBox="0 0 98 96" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z" fill="currentColor"/>
						</svg>
					</a>
					
					<Button href="/projects" variant="primary" size="sm">Try Our Demos ðŸš€</Button>
				</div>
			</div>
		</div>
		
		<!-- Mobile navigation -->
		<div class="flex lg:hidden items-center justify-between w-full">
			<a
				aria-label="Home"
				href="/"
				class="flex py-1 text-lg font-heading font-semibold hover:text-primary-600 transition-colors"
			>
				<span class="font-bold text-primary-600">MLL</span>&nbsp;Lab
			</a>
			
			<!-- Mobile menu in single line -->
			<div class="overflow-x-auto">
				<nav>
					<ul class="flex space-x-3 whitespace-nowrap">
						{
							menuitems.map((item) => {
								const isActive = currentPath === item.path || 
									(item.path !== '/' && currentPath.startsWith(item.path));
								return (
									<li>
										<a
											aria-label={item.title}
											href={item.path}
											class={`text-xs font-bold px-2 py-1 transition-colors ${isActive 
												? "text-primary-600" 
												: "text-secondary-600 hover:text-primary-600"}`}
										>
											{item.title}
										</a>
									</li>
								);
							})
						}
						<li>
							<a href="/projects" class="text-xs font-bold px-2 py-1 bg-primary-600 text-white rounded-md">
								Demos
							</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</header>

<script>
  // No need for menu toggle functionality since menu is always visible
  document.addEventListener('DOMContentLoaded', function() {
    // Future mobile enhancements can be added here if needed
  });
  document.addEventListener('astro:page-load', function() {
    // Future mobile enhancements can be added here if needed
  });
</script>
---
// src/layouts/MindCubeLayout.astro
// Layout specifically for Mind Cube project
import '../styles/mindcube/global.css';

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Mind Cube - Spatial Mental Modeling from Limited Views | MLL Lab Research Project" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/assets/images/mindcube.png" />
        <link rel="apple-touch-icon" href="/assets/images/mindcube.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        {/* We can link fonts or global styles here if necessary */}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    </head>
    <body>
        <main>
            <slot /> {/* Page content from mind-cube.astro goes here */}
        </main>
    </body>
</html>

<style is:global>
	:root {
		--header-height: 60px;
		--page-max-width: 1100px;
		--text-light: #555;
	}
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
		color: #252525;
		scroll-behavior: smooth;
	}
	body {
		min-height: 100vh;
		overflow-x: hidden;
	}
	main {
		padding-top: 0; /* Remove header padding for standalone page */
	}
</style> 
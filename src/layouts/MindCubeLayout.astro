---
// src/layouts/MindCubeLayout.astro
// Layout specifically for Mind Cube project
import Navbar from '../components/Navbar.astro';

// Import Mind Cube styles
import '../styles/mindcube/mind-cube-content.css';

const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Mind Cube - Spatial Mental Modeling from Limited Views | MLL Lab Research Project" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/assets/images/mindcube.png" />
        <link rel="apple-touch-icon" href="/assets/images/mindcube.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        {/* Import Mind Cube specific fonts and styles */}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        
        {/* Import Google Fonts for consistency with main layout */}
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    </head>
    <body class="mind-cube-page">
        <Navbar />
        <main class="mind-cube-main">
            <slot /> {/* Page content from mind-cube.astro goes here */}
        </main>
    </body>
</html>

<style is:global>
	/* CSS variables needed for Navbar component - copied from main Layout */
	:root {
		--primary-50: #f0f9ff;
		--primary-100: #e0f2fe;
		--primary-200: #bae6fd;
		--primary-300: #7dd3fc;
		--primary-400: #38bdf8;
		--primary-500: #0ea5e9;
		--primary-600: #0284c7;
		--primary-700: #0369a1;
		--primary-800: #075985;
		--primary-900: #0c4a6e;
		
		--accent-50: #eef2ff;
		--accent-100: #e0e7ff;
		--accent-200: #c7d2fe;
		--accent-300: #a5b4fc;
		--accent-400: #818cf8;
		--accent-500: #6366f1;
		--accent-600: #4f46e5;
		--accent-700: #4338ca;
		--accent-800: #3730a3;
		--accent-900: #312e81;
		
		--text-primary: #1e293b;
		--text-secondary: #475569;
		--bg-light: #fefefe;
		--bg-off: #f8fafc;
		
		/* Mind Cube specific variables */
		--header-height: 60px;
		--page-max-width: 1100px;
		--text-light: #555;
	}
	
	/* Basic font and typography setup needed for consistent styling */
	* {
		box-sizing: border-box;
	}
	
	html {
		font-family: 'Inter', system-ui, sans-serif;
		color: var(--text-primary);
		scroll-behavior: smooth;
	}
	
	/* Only apply Montserrat to navbar headers, not mindcube content */
	header h1, header h2, header h3, header h4, header h5, header h6 {
		font-family: 'Montserrat', system-ui, sans-serif;
	}
	
	/* Preserve mindcube title and content styles */
	.mind-cube-main .main-title {
		font-size: 3.75rem !important;
		font-weight: 800 !important;
		color: #2a2f6c !important;
		font-family: inherit !important;
		line-height: 1.1 !important;
		display: flex !important;
		flex-direction: column !important;
	}
	
	.mind-cube-main .title-line {
		display: block !important;
	}
	
	/* Ensure mindcube content sections maintain their original styling */
	.mind-cube-main .content-section {
		font-family: 'Inter', system-ui, sans-serif;
	}
	
	/* Container utility class needed by Navbar */
	.container {
		max-width: 1280px;
		margin-left: auto;
		margin-right: auto;
	}
	
	/* Mind Cube specific body background */
	body.mind-cube-page {
		background-image: url('/mindcube/background-blurred.svg');
		background-size: cover;
		background-position: center center;
		background-repeat: no-repeat;
		background-attachment: fixed;
		background-color: #f8f9fa;
	}
	
	/* Mind Cube specific main content spacing */
	.mind-cube-main {
		padding-top: var(--header-height);
		min-height: calc(100vh - var(--header-height));
	}
	
	/* Force desktop navigation to show properly */
	@media (min-width: 1024px) {
		.lg\:flex {
			display: flex !important;
		}
		.lg\:hidden {
			display: none !important;
		}
	}
	
	/* Force mobile navigation to hide on desktop */
	@media (max-width: 1023px) {
		.lg\:flex {
			display: none !important;
		}
		.lg\:hidden {
			display: flex !important;
		}
	}
</style> 